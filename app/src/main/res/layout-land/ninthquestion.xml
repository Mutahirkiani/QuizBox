<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout"
    android:background="@drawable/animation_list">

    <TextView
        android:id="@+id/textView2"
        android:typeface="serif"
        android:textSize="24dp"
        android:textStyle="italic"
        android:gravity="center"
        android:textColor="#71027c"
        android:layout_width="250dp"
        android:layout_marginTop="21dp"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"

        android:text="What kind of person mutahir kiani is?"
        android:layout_height="140dp" />

    <ImageView
        android:background="@drawable/button"
        android:id="@+id/btn_scan_qr"
        android:textSize="15dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView" />

    <ImageView

        android:background="@drawable/next"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="24dp"
        android:layout_alignBottom="@+id/btn_scan_qr"
        android:layout_alignRight="@+id/btn_scan_qr"
        android:layout_alignEnd="@+id/btn_scan_qr" />

    <TextView

        android:background="@drawable/question"
        android:id="@+id/textView"
        android:layout_width="380dp"
        android:textSize="20dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_height="200dp"
        android:layout_width="300dp"
        android:contextClickable="true"
        android:id="@+id/rg"
        android:layout_marginEnd="29dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btn_scan_qr"
        android:layout_below="@+id/textView">

        <RadioButton
            android:text="Studying"
            android:id="@+id/study"
            android:layout_weight="1"
            android:layout_width="150dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="15dp"
            android:layout_height="10dp" />

        <RadioButton
            android:id="@+id/no"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:text="I  should be rich enough to not need eduaction"
            android:layout_width="300dp" />

        <RadioButton
            android:text="Catching up with friends"
            android:id="@+id/friends"
            android:layout_weight="1"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="15dp"
            android:layout_width="330dp"
            android:layout_height="10dp" />

        <RadioButton
            android:text="With partner"
            android:id="@+id/partner"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:layout_width="300dp" />

    </RadioGroup>

</RelativeLayout>