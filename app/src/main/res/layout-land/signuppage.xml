<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/relativeLayout"
    android:background="@drawable/animation_list"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logob"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/firstName"
        android:layout_height="43dp"
        android:gravity="top"
        android:hint="First Name"
        android:textColor="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:layout_width="250dp"
        android:textColorHint="#fff700"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name" />

    <EditText
        android:id="@+id/lastName"
        android:layout_height="43dp"
        android:gravity="top"
        android:hint="LastName"
        android:textColor="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColorHint="#ffee06"
        android:layout_width="250dp"

        android:layout_below="@+id/firstName"
        android:layout_alignStart="@+id/firstName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:textColorHint="#fff700"
        android:hint="password"
        android:textColor="#ffffff"
        android:paddingLeft="10dp"
        android:layout_below="@+id/lastName"
        android:layout_alignStart="@+id/lastName"
        android:layout_alignEnd="@+id/lastName" />

    <Button
        android:text="Sign Up"
        android:theme="@style/MyButton"
        android:id="@+id/upload"
        android:textSize="15dp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:layout_height="60dp"
        android:background="#fff700"
        android:layout_width="150dp"
        android:layout_below="@+id/lastName"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/name"
        android:layout_height="43dp"
        android:gravity="top"
        android:hint="Username"
        android:textColor="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:layout_width="250dp"
        android:textColorHint="#fff700"
        android:layout_below="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_marginEnd="43dp" />
</RelativeLayout>