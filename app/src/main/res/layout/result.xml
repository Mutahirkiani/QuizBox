<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/relativeLayout"
    android:background="@drawable/animation_list"
    android:layout_height="match_parent" android:layout_width="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image1"
        android:src="#FFFFFF"
        app:civ_border_width="2dp"
        android:layout_marginLeft="10dp"
        app:civ_border_color="#FF000000"
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:layout_marginEnd="16dp"
        android:layout_alignTop="@+id/profile_image"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Back to profile"
        android:theme="@style/MyButton1"
        android:id="@+id/logout"
        android:background="#ffee06"
        android:textSize="20dp"
        android:layout_marginBottom="35dp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView4"
        android:ems="10"
        android:gravity="center"
        android:textColor="#fffb00"
        android:minHeight="55dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textSize="40dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:text="Score:"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/profile_image"
        android:layout_height="40dp"
        android:layout_above="@+id/profile_image1"
        android:layout_width="180dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:src="#FFFFFF"
        app:civ_border_width="2dp"
        android:layout_marginLeft="10dp"
        app:civ_border_color="#FF000000"
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:layout_marginTop="96dp"
        android:layout_marginStart="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/result1"
        android:ems="10"
        android:gravity="center"
        android:textColor="#fffb00"
        android:minHeight="55dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textSize="40dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_height="40dp"
        android:layout_width="180dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView4"
        android:layout_above="@+id/profile_image1" />

    <TextView
        android:id="@+id/result"
        android:ems="10"
        android:gravity="center"
        android:textColor="#fffb00"
        android:minHeight="55dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_below="@+id/profile_image1"
        android:layout_alignStart="@+id/logout" />

</RelativeLayout>